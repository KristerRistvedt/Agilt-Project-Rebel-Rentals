pipeline {

    agent any

    stages {
        stage('Checkout') {
                steps {
                    checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/josost/dotnet.git']]])
                }
        }
        stage('Restore') {
            steps {
                bat 'dotnet restore'
            }
        }
        stage('Build') {
            steps {
                bat '"C:/Program Files (x86)/Microsoft Visual Studio/2019/Community/MSBuild/Current/Bin/msbuild.exe" RazorPagesMovie.sln'
            }
        }
        stage('Run') {
            steps {
                bat 'START /B dotnet C:/Users/josost/.jenkins/workspace/msbuild_pipeline/RazorPagesMovie/bin/Debug/netcoreapp3.1/RazorPagesMovie.dll'
            }
        }
        stage('UI tests') {
            steps {
                    bat 'sleep 10s'
                    bat 'robot Tests'
            }
        }
    }
}
