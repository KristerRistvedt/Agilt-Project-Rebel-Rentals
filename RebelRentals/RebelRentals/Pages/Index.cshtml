@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <img class="invisible" id="lightsaber-one" src="~/Images/Lightsaber.gif" />
    <h1 id="title" class="display-4">Rebel Rentals</h1>
    <img class="invisible flip-vertical" id="lightsaber-two" src="~/Images/Lightsaber.gif" />
</div>

@if (Model.Apod != null)
{
    <div class="text-center">
        <h4 class="pb-2">NASA's Daily Recommended Tourist Location:</h4>
        <h5 class="pb-4">@Model.Apod.Title</h5>
        @if (Model.Apod.Media_Type == "image")
        {
            <img id="apod-image" class="img-thumbnail rounded" src="@Model.Apod.Url" />
        }
        else if (Model.Apod.Media_Type == "video")
        {
            <iframe src="@Model.Apod.Url"></iframe>
        }
        <p class="pt-5">@Model.Apod.Description</p>
    </div>
}

<script>
    const title = document.getElementById('title');
    title.addEventListener('mouseover', removeTransparency);
    title.addEventListener('mouseleave', addTransparency);
    lightsaberOne = document.getElementById('lightsaber-one');
    lightsaberTwo = document.getElementById('lightsaber-two');

    function addTransparency() {
        lightsaberOne.classList.add('invisible');
        lightsaberTwo.classList.add('invisible');
    }

    function removeTransparency() {
        lightsaberOne.classList.remove('invisible');
        lightsaberTwo.classList.remove('invisible');
    }
</script>