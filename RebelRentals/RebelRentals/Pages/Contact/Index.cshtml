@page
@model RebelRentals.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<h1>Contact Us</h1>

<form method="post" asp-page-handler="SendEmailToSupport">
    @if (Model.sentMailResult != true)
    {
        <div>
            <label asp-for="@Model.NameField"></label>
            <input asp-for="@Model.NameField" />
            <span asp-validation-for="@Model.NameField" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="@Model.EmailField"></label>
            <input asp-for="@Model.EmailField" />
            <span asp-validation-for="@Model.EmailField" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="@Model.MessageField"></label>
            <input asp-for="@Model.MessageField" />
            <span asp-validation-for="@Model.MessageField" class="text-danger"></span>
        </div>
        <div>
            <button>Send</button>
        </div>
    }
    else
    {
        <p>
            Your email has been sent! <br />
            A support member will get back to you as soon as possible. <br />
            Thank you for your patience!
        </p>
    }
</form>
