@page
@model RebelRentals.Pages.OrderPage.SummaryModel
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Summary";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Summary</h1>

<p>Total cost: @Model.TotalCost</p>

<table class="table text-center">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                Model
            </th>
            <th>
                Max. population
            </th>
            <th>
                Class
            </th>
            <th>
                Price
            </th>
            <th>
                Number of ships
            </th>
        </tr>
    </thead>
    <tbody class="trMiddle">
        @{
            @foreach (var item in Model.ShipOrdersCopy)
            {
                <tr>

                    <td>
                        @switch (item.Ship.Model)
                        {
                            case "X-Wing":
                                <img src="~/Images/XWing.jpg" height="100" width="100" />
                                break;
                            case "A-Wing":
                                <img src="~/Images/AWing.png" height="100" width="100" />
                                break;
                            case "Death Star":
                                <img src="~/Images/DeathStar.jpg" height="100" width="100" />
                                break;
                            case "Salvation":
                                <img src="~/Images/Salvation.jpg" height="100" width="100" />
                                break;
                            case "Star Destroyer":
                                <img src="~/Images/StarDestroyer.jpeg" height="100" width="100" />
                                break;
                            case "Tie Fighter":
                                <img src="~/Images/TieFighter.jpg" height="100" width="100" />
                                break;
                            case "Y-Wing":
                                <img src="~/Images/YWing.jpeg" height="100" width="100" />
                                break;
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ship.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ship.NumberOfPopulation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ship.Class)
                    </td>
                    <td>
                        @(Math.Round(item.Ship.Price*JsonConvert.DeserializeObject<double>(HttpContext.Session.GetString("SessionRate")), 3)) @(JsonConvert.DeserializeObject<Currency>(HttpContext.Session.GetString("SessionCurrency")).CurrencySymbol) 
                    </td>
                    <td>
                        @item.Count
                    </td> 
                </tr>
            }
        }
    </tbody>
</table>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
