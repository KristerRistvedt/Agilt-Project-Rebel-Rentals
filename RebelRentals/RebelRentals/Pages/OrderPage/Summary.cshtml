@page
@model RebelRentals.Pages.OrderPage.SummaryModel

@{
    ViewData["Title"] = "Summary";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Summary</h1>

<table class="table text-center">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                Model
            </th>
            <th>
                Max. population
            </th>
            <th>
                Class
            </th>
            <th>
                Price
            </th>
            <th>
                Number of ships
            </th>
        </tr>
    </thead>
    <tbody class="trMiddle">
        @{
                <tr>
                    @for (int i = 0; i < Model.ShipOrders.Count(); i++)
                    {
                        <td>
                            @switch (Model.ShipOrders[i].Ship.Model)
                            {
                                case "X-Wing":
                                    <img src="~/Images/XWing.jpg" height="100" width="100" />
                                    break;
                                case "A-Wing":
                                    <img src="~/Images/AWing.png" height="100" width="100" />
                                    break;
                                case "Death Star":
                                    <img src="~/Images/DeathStar.jpg" height="100" width="100" />
                                    break;
                                case "Salvation":
                                    <img src="~/Images/Salvation.jpg" height="100" width="100" />
                                    break;
                                case "Star Destroyer":
                                    <img src="~/Images/StarDestroyer.jpeg" height="100" width="100" />
                                    break;
                                case "Tie Fighter":
                                    <img src="~/Images/TieFighter.jpg" height="100" width="100" />
                                    break;
                                case "Y-Wing":
                                    <img src="~/Images/YWing.jpeg" height="100" width="100" />
                                    break;
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.RentedShips[i].Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.RentedShips[i].NumberOfPopulation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.RentedShips[i].Class)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.RentedShips[i].Price)
                        </td>
                        <td>
                            @Model.ShipOrders[i].Count;
                        </td>
                    }
                </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
