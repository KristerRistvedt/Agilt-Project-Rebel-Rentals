@page
@model RebelRentals.Pages.OrderPage.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Order summary</h1>

<p>Total cost: @Model.TotalCost</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListOfShipsInCart[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListOfShipsInCart[0].Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListOfShipsInCart)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
